#!/usr/bin/env python

import requests
import time
import os

agora_host = os.environ.get('AGORA_HOST', '') + ':' + str(os.environ.get('AGORA_PORT', ''))
metric_host = os.environ.get('METRIC_HOST', 'http://127.0.0.1') + ':' + str(os.environ.get('METRIC_PORT', ''))
 
def seed(t, u):
    r = requests.post('http://' + agora_host + '/seeds', json={'type': t, 'uri': u})
    print 'Load {} seed: {}'.format(t, r.status_code)

con = False
cou = 0
while not con:
    try:
        seed('metrics:MetricService', metric_host + '/qualitative/api')
        seed('views:ViewService', metric_host + '/qualitative/api')
        con = True
    except Exception:
        cou += 1
        if cou > 5:
            break
        time.sleep(1)
